                new { date = "2023-10-01", temperatureC = 20, summary = "Mild" },
                new { date = "2023-10-02", temperatureC = 24, summary = "Warm" },
                new { date = "2023-10-03", temperatureC = 18, summary = "Cool" },
                new { date = "2023-10-04", temperatureC = 16, summary = "Chilly" },
                new { date = "2023-10-05", temperatureC = 27, summary = "Hot" }
