{
  "name": "litrazor",
  "version": "1.0.0",
  "type": "module",
  "description": "LitRazor with Tailwind CSS",
  "scripts": {
    "build": "npm run build:ts && npm run build:css",
    "build:ts": "npx esbuild Pages/**/*.ts --bundle --outdir=wwwroot/dist --sourcemap",
    "build:css": "postcss styles/app.css -o wwwroot/css/app.min.css",
    "watch": "concurrently -n TS,CSS -c green,cyan \"npm:watch:ts\" \"npm:watch:css\"",
    "watch:ts": "esbuild \"Pages/**/*.ts\" --bundle --outdir=wwwroot/dist --sourcemap --watch",
    "watch:css": "postcss styles/app.css -o wwwroot/css/app.min.css --watch",
    "new-component": "node Scripts/newFile.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.1",
    "lit": "^3.2.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.0.17"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.17",
    "lit": "^3.2.1",
    "postcss-cli": "^11.0.1",
    "typescript": "^5.8.2"
  }
}